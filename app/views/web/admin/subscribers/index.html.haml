%h1= t '.title'

%table.table.table-bordered
  %thead
    %tr
      %th.id-col #
      %th= Subscriber.human_attribute_name :fio
      %th= Subscriber.human_attribute_name :email
      %th= Subscriber.human_attribute_name :phone
      %th= Subscriber.human_attribute_name :created_at
      %th.actions-col
  %tbody
    - @subscribers.each do |subscriber|
      %tr
        %td.id-col= subscriber.id
        %td= link_to subscriber, edit_admin_subscriber_path(subscriber)
        %td= subscriber.email
        %td= subscriber.phone
        %td= l subscriber.created_at
        %td.actions-col
          = link_to t('.edit'), edit_admin_subscriber_path(subscriber), class: 'btn btn-info'
          = link_to t('.delete'), admin_subscriber_path(subscriber), method: :delete, class: 'btn btn-alert'

