%h1= t('.title')

%br
= link_to t('.add'), new_admin_user_path, class: 'btn btn-primary'
%br
%br

%table.table.table-bordered
  %thead
    %tr
      %th.id-col #
      %th= User.human_attribute_name :email
      %th= User.human_attribute_name :first_name
      %th= User.human_attribute_name :last_name
      %th.actions-col
  %tbody
    - @users.each do |user|
      %tr
        %td.id-col= user.id
        %td= link_to user.email, edit_admin_user_path(user)
        %td= user.first_name
        %td= user.last_name
        %td.actions-col
          = link_to t('.edit'), edit_admin_user_path(user), class: 'btn btn-info'
          = link_to t('.delete'), admin_user_path(user), method: :delete, class: 'btn btn-alert'
