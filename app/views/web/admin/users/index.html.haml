%h1= t('views.admin.users.index.title')

%br
= link_to t('views.admin.users.index.add_new_user'), new_admin_user_path, :class => 'btn btn-primary'
%br
%br

%table.table.table-bordered
  %thead
    %tr
      %th= t('activerecord.attributes.users.email')
      %th= t('activerecord.attributes.user.first_name')
      %th= t('activerecord.attributes.user.last_name')
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.email, edit_admin_user_path(user)
        %td= user.first_name
        %td= user.last_name
        %td
          = link_to t('views.admin.users.index.edit_user'), edit_admin_user_path(user), :class => 'btn btn-info'
          = link_to t('views.admin.users.index.delete_user'), admin_user_path(user), :method => :delete, :class => 'btn btn-alert'
