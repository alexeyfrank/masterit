%h1 Редактирование настроек сайта
= simple_form_for(:settings, url: admin_settings_path, multipart: true) do |f|
  = f.input :site_name, input_html: { value: @settings[:site_name], class: 'span6' }, label: 'Название сайта'

  = f.input :phone, input_html: { value: @settings[:phone], class: 'span6' }, as: :tel, label: 'Телефон'
  = f.input :email, input_html: { value: @settings[:email], class: 'span6' }, as: :email, label: 'Email'
  
  - if @settings[:logo]
    = image_tag "/#{@settings[:logo]}"
  = f.input :logo, input_html: { value: @settings[:logo] }, as: :file

  - if @settings[:logo]
    = image_tag "/#{@settings[:header_image]}"
  = f.input :header_image, input_html: { value: @settings[:header_image] }, as: :file
 
  = f.input :emergency_call, as: :ckeditor, input_html: { value: @settings[:emergency_call], class: 'span6' }, label: 'Экстренное объявление'
  = f.input :emergency_call, as: :ckeditor, input_html: { value: @settings[:about_center], class: 'span6' }, label: 'Текст о центре'

  = f.submit 'Сохранить настройки', class: 'btn btn-primary'